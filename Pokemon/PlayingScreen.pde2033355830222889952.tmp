class PlayingScreen {

  PImage gym, pokeCenter, pokeMart;
  
  PlayingScreen(){
    gym = loadImage("gym.png");
    pokeCenter = loadImage("hospital.png");
    pokeMart = loadImage("shop.png");
    gym.resize(112,75);
    pokeCenter.resize(75,75);
    pokeMart.resize(75,75);
  }
      
  void draw() {
    //vertical road
    fill(198,140,83);
    noStroke();
    rect(0,285,550,30);
    //horizontal roads from top to bottom
    noStroke();
    rect(300,100,250,30);
    noStroke();
    rect(300,100,30,400);
    noStroke();
    rect(300,470,250,30);
    placeBuildings();
  }
  
  void placeBuildings(){
    image(pokeCenter, 75, 75);
    image(pokeMart, 450, 150);
    image(gym, 469, 395);
  }

}
